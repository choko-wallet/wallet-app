{
  "extends": "@skyekiwi/dev/config/tsconfig-base.json",
  "exclude": [
    "build/**/*",
    "**/build/**/*"
  ],
  "compilerOptions": {
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "@choko-wallet/sdk": [ "packages/sdk/src" ],
      "@choko-wallet/sdk/*": [ "packages/sdk/src/*" ],
      "@choko-wallet/core": [ "packages/core/src" ],
      "@choko-wallet/core/*": [ "packages/core/src/*" ],
    },
    "skipLibCheck": true,
    "typeRoots": [
      "./node_modules/@polkadot/ts",
      "./node_modules/@types"
    ]
  },
}
